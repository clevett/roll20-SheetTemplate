mixin Header(props)
  -
    const {name,  i18n = name,  size } = props || {};

    const baseClasses = 'ellipse capitalize';
    const sizeClasses = {
      h1: 'text-4xl font-weight-bold text-4xl--line-height brand-font-h1',
      h2: 'text-2xl font-weight-medium text-2xl--line-height brand-font-h2',
      h3: 'text-lg font-weight-medium text-lg--line-height brand-font-h3',
      h4: 'text-base font-weight-bold brand-font-h4'
    };

    const tag = size || 'h4';
    const classes = `${baseClasses} ${sizeClasses[tag] || ''}`;

  #{tag}(data-i18n=i18n class=classes class!=attributes.class)
