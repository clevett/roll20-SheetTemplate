- const dashedName = name => name.replace(/ /g, '-');
- const attrName = name => name.replace(/ /g, '_').toLowerCase();
- const removeSpace = name => name.replace(/ /g, '');
- const toLowerCase = name => name.toLowerCase();


.dropzone.compendium-drop-target.creatures.pregens
    //- Hidden inputs to accept drop data from compendium
    each val in ['Name', 'data', 'Content', "Category"]
        input(name=`attr_drop_${val.toLowerCase()}` type='hidden' value='' accept=val)

    //- Hidden input to identify sheet type. Used CSS to change the view based value
    input.type(name='attr_sheet_type' type='hidden' value='character')

    include pug/style_guide.pug

    .grid.gap-6.character
        .grid.tablist.rounded-t-md
            +Tabs({values: viewTabs, attr: 'sheet_type'})
        include pug/character.pug



