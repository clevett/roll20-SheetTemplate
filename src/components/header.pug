mixin Header(props)
  -
    const {name,  i18n = name,  size } = props || {};

    const baseClasses = 'ellipse capitalize';
    const sizeClasses = {
      h1: 'text-4xl font-extrabold text-balance tracking-tight scroll-m-20 text-center brand-font-h1',
      h2: 'text-3xl font-semibold text-balance tracking-tight scroll-m-20 brand-font-h2',
      h3: 'text-2xl font-semibold tracking-tight scroll-m-20 brand-font-h3',
      h4: 'text-xl font-semibold tracking-tight scroll-m-20 brand-font-h4'
    };

    const tag = size || 'h4';
    const classes = `${baseClasses} ${sizeClasses[tag] || ''}`;

  #{tag}(class=classes class!=attributes.class data-i18n=i18n )
