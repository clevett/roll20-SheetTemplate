mixin repeatingSection({ sectionName, display = [], collapse = [] })
	- const [name, ...rest] = display
	.grid.gap-2.content-start.relative(class=dashedName(sectionName))
		+Header({ name: sectionName, size: "h2" }).block.text-center

		.grid.gap-4.grid-flow-col.items-center.border-b.auto-cols-fr
			+Header({ name, size: "h3" }).w-full
			each val in [...rest]
				+Header({ name: val, size: "h3" }).text-center.w-full

	fieldset(class=`repeating_${dashedName(sectionName)}`)
		.grid.gap-2.items-center
			.grid.gap-4.grid-flow-col.items-center.auto-cols-fr
				- const value = buttonValue({ type: BUTTON_VALUE_TYPES.REPEATING_CHAT_BUTTON })
				+Button({ name, type: BUTTON_TYPES.ROLL, value }).text-left
					+Text({ name: name })
				each val in rest
					+Text({ name: val }).text-center
			
			.grid.gap-2.items-center.pl-2
				+Text({name: "description"})
			
			.bg-neutral-100.border-neutral-200.border-solid.border-2.grid.gap-2.items-center.rounded-xl.p-2
				.grid.gap-2.grid-flow-col.items-center
					.col-auto-fr.grid.gap-2.grid-flow-col.items-center
						+Header({ name: "name", size: "h4" })
						+Input({ name: "name" })
					.col-auto-fr.grid.gap-2.grid-flow-col.items-center
						+Header({ name: "value", size: "h4" })
						+Input({ name: "value", type: "number" })
				.grid.gap-2.items-center.w-full
					+Header({ name: "description", size: "h4" })
					+Textarea({ name: "description", placeholder: "Enter description here..." })


