rolltemplate.sheet-rolltemplate-roll
	.sheet-template-container
		// - Display a header on the template -
		.sheet-template-header
			+Header({size: "h1"})
				| {{#header}}{{header}}{{/header}}
		// - Display the dice roll in the template -
		.sheet-template-body
		
			| {{#dice}}
			.sheet-template-dice
				|{{dice}} 
			| {{/dice}}

			| {{#description}}
			.sheet-template-description
				+Text()
					| {{description}}
			| {{/description}}

	
